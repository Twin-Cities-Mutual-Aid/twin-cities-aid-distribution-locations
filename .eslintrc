{
    "env": {
        "browser": true,
        "amd": true,
    },
    "extends": [
        "eslint:recommended",
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "globals": {
        "module": true,
        "gtag": true,
        "List": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "never"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "global-require": [
            "error"
        ],
        "no-console": [
            "error", {
                "allow": ["log"]
            }
        ]
    }
}
